<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner"
    android:orientation="vertical"
    android:padding="40dp"
    app:cornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img_carolo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wide_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:textSize="@dimen/text_size_20"
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿Deseas entrar como Gerente?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/wide_vertical_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_si"
                android:layout_width="100dp"
                android:layout_height="@dimen/height_button_default"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/cafe_boton2"
                android:text="Si"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btn_no"
                android:layout_width="100dp"
                android:layout_height="@dimen/height_button_default"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/cafe_boton2"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>