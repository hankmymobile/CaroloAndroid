<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bienvenida"
    android:clickable="true"
    tools:context=".modules.recoveryPassword.RecoveryPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/default_horizontal_margin"
        android:paddingVertical="@dimen/default_vertical_margin">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button_default"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white_transparent"
            android:text="@string/next"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_start"
                android:textAlignment="textStart"
                android:textColor="@color/warning_color"
                android:textSize="@dimen/text_size_20"
                android:layout_marginBottom="200dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>